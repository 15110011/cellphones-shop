@model CheckoutViewModel
<h1>
    @ViewBag.CheckoutCompleteMessage
</h1>

<div class="container" style="color: black">
    <div class="order-checkout" style="margin-top: 100px;">
        <h4>Your order:</h4>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Product</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Price</th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 1;}
                @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
                {
                    <tr>
                        <th scope="row">@(i++)</th>
                        <td>@line.Phone.Name</td>
                        <td>@line.Amount</td>
                        <td>@line.Phone.Price</td>
                    </tr>
                }                
            </tbody>
        </table>
        <div class="float-right">Total: @Model.ShoppingCartTotal.ToString("c")</div>
    </div>
    <hr style="margin-top: 45px;" /> 
</div>
