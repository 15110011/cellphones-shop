@model Phone
<link href="~/style/main_styles.css" rel="stylesheet" />
<link href="~/style/responsive.css" rel="stylesheet" />
<div class="product">
    <div class="product_image"><a asp-controller="Phone" asp-action="Details" asp-route-phoneId="@Model.PhoneId"><img src="@Model.ImageUrl" alt=""></a></div>
    <div class="product_extra product_new"><a href="Product/Index">@Model.ShortDescription</a></div>
    <div class="product_content text-center">
        <div class="product_title"><a asp-controller="Phone" asp-action="Details" asp-route-phoneId="@Model.PhoneId">@Model.Name</a></div>
        <div class="product_price" style="color: red;">@Model.Price.ToString("c")</div>
        <button class="btn btn-success mt-3">
            <a style="color: white" asp-controller="ShoppingCart"
               asp-action="AddToShoppingCart"
               asp-route-phoneId="@Model.PhoneId">Add to cart</a>
        </button>
    </div>
</div>